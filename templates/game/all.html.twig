{% extends 'base.html.twig' %}

{% block title %}Hello Home!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<style>
  .container {
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
             background-color: rgba(255, 255, 255, 0.5); 
            overflow: hidden;}
            td{
                font-size:12px;
                color:black;
                font-weight:bold;
            }
            
  
            .container{
                margin-top:80px;
            }
             .btn-warning {
            background-color: #451242;
            border-color: #451242;
            margin-top: 15px;}
            .sign-out-btn {
                                margin-left: 15px;

            margin-top: 20px;
            color:#fff
        }
        
</style>
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h2>List Games</h2>
        <a href="{{ path('AjouterGame') }}" class="btn btn-primary">ADD</a>
    </div>
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>nb Joueur</th>
                <th>Type</th>
                <th>Editeur</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for g in games %}
            <tr>
                <td>{{ g.id }}</td>
                <td>{{ g.titre }}</td>
                <td>{{ g.getNbrJoueur() }}</td>
                <td>{{ g.getType() }}</td>
                <td>{{ g.getEditeur() }}</td>
                <td>
                    {% if g.getImage() is not null %}
                        <img src="{{ publicPath ~ g.getImage }}" height="100">
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('game_show', {'id': g.id }) }}">Details</a>
                    <a class="btn btn-success" href="{{ path('update_game', {'id': g.id }) }}">Update</a>
                    <a class="btn btn-danger" href="{{ path('delete_game', {'id': g.id }) }}"
                       onclick="return confirm('Are you sure to delete! {{ g.titre }}')">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>    <a href="{{ path('app_admin') }}" class="btn btn-warning sign-out-btn">Home</a>

{% endblock %}
