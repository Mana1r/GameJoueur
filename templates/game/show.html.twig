{% extends 'base.html.twig' %}

{% block titre %}
    {{ parent()|upper }}:<br>
    {{ game.getTitre() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
     <style>
   .cont {
    margin-left: 550px;
   }
        .custom-card {
            width: 400px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
        }
        .card {margin-top:60px;
            
             background-color: rgba(255, 255, 255, 0.5); 
            overflow: hidden;}
             h5{   font-size:12px;
                color:#000;
                font-weight:bold;}
                 .tab {
                   margin-top:30px;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
             background-color: rgba(255, 255, 255, 0.5); 
            overflow: hidden;}
            td{
                font-size:12px;
                color:black;
                font-weight:bold;
            }
    </style>
{% endblock %}

{% block body %}
<div class="container cont">
    <div class="card  custom-card">
        <img src="{{ publicPath ~ game.getImage }}" class="card-img-top img-fluid" alt="Game Image" style="max-height: 300px; object-fit: contain;">
        <div class="card-body d-flex flex-column align-items-center">
            <h2 class="card-title">{{ game.getTitre() }}</h2>
            <h5 class="card-subtitle mb-2 ">Type: {{ game.getType() }}</h5>
            <h5 class="card-subtitle mb-2 ">Players: {{ game.getNbrJoueur() }}</h5>
            <h5 class="card-subtitle mb-2 ">Editeur: {{ game.getEditeur() }}</h5>
        </div>
    </div>

    </div>
    <div class="container tab">
    <h4 class="mt-4">Players</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            {% for j in joueur %}
                <tr>
                    <td>{{ j.nom }}</td>
                    <td>{{ j.email }}</td>
                    <td>{{ j.score }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}